<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f6f1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvCategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/play_fair"
        android:gravity="center"
        android:text="@string/category_page_title"
        android:textColor="#030100"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_regular"
        android:gravity="center"
        android:text="@string/category_page_text"
        android:textColor="#130801"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/llcategories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCategoryTitle" />

    <LinearLayout
        android:id="@+id/llcategories"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCategoryTitle">

        <TextView
            android:id="@+id/bpharmacy"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/category_button_back"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/ic_cat_pharmacy"
            android:drawableRight="@drawable/ic_next"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:text="@string/category_item_1"
            android:textColor="#f59662"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/bgrocery"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/category_button_back"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/ic_cat_grocery"
            android:drawableRight="@drawable/ic_next"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:text="@string/category_item_2"
            android:textColor="#f59662"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/bpark"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/category_button_back"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/ic_cat_park"
            android:drawableRight="@drawable/ic_next"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:text="@string/category_item_3"
            android:textColor="#f59662"
            android:textSize="20dp" />
    </LinearLayout>

